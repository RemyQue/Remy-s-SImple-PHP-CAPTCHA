<?php

use Random\RandomException;

session_start();

// Generate a new CAPTCHA code if it doesn't exist in the session
if (!isset($_SESSION["captcha_code"])) {
    try {
        $_SESSION["captcha_code"] = bin2hex(random_bytes(3)); // Generate CAPTCHA code without forcing uppercase
    } catch (RandomException $e) {
        // Handle exception if necessary
    }
}

$message = ''; // Initialize message variable

// Check if the form is submitted
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    // Handle CAPTCHA submission
    if (isset($_POST["captcha_code"]) && !empty(trim($_POST["captcha_code"]))) {
        // Validate the user input directly without converting to uppercase
        if (trim($_POST["captcha_code"]) === $_SESSION["captcha_code"]) {
            // Display a success message before redirecting
            $message = '<p class="text-center text-success">CAPTCHA verified. Redirecting you to VAULTLOCKER...</p>';
            echo '<meta http-equiv="refresh" content="3;url=../website1/pages/index.php">'; // Redirect after 3 seconds
            echo $message; // Ensure the message is displayed
            exit; // Ensure no further code is executed after this
        } else {
            $message = '<p class="text-center text-danger">Invalid CAPTCHA. Please try again.</p>';
            // Regenerate CAPTCHA code on invalid input
            try {
                $_SESSION["captcha_code"] = bin2hex(random_bytes(3));
            } catch (RandomException $e) {
                // Handle exception if necessary
            }
        }
    } elseif (isset($_POST["captcha_code"])) {
        $message = '<p class="text-center text-danger">CAPTCHA code cannot be empty. Please try again.</p>';
    }

    // Check if refresh is requested
    if (isset($_POST["refresh_captcha"])) {
        // Regenerate CAPTCHA code
        try {
            $_SESSION["captcha_code"] = bin2hex(random_bytes(3));
        } catch (RandomException $e) {
            // Handle exception if necessary
        }
        $message = '<p class="text-center text-info">CAPTCHA refreshed.</p>'; // Centered message without alert box
    }
}
?>

